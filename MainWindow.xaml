        <TextBox x:Name="TBPasswort" HorizontalAlignment="Left" Height="18" Margin="112,210,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="119" TextChanged="TBPasswort_TextChanged"/>
        <TextBox x:Name="TBUserid" HorizontalAlignment="Left" Height="21" Margin="113,184,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="116" TextChanged="TBUserid_TextChanged"/>
        <Label x:Name="UserOutput" Content="Label" HorizontalAlignment="Left" Height="23" Margin="141,329,0,0" VerticalAlignment="Top" Width="45"/>



    </Grid>
</Window>
