        <TextBlock HorizontalAlignment="Left" Height="22" Margin="44,184,0,0" TextWrapping="Wrap" Text="User ID:" VerticalAlignment="Top" Width="66"/>
        <TextBlock HorizontalAlignment="Left" Height="22" Margin="44,211,0,0" TextWrapping="Wrap" Text="Password:" VerticalAlignment="Top" Width="66"/>
